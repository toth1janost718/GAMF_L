@using System.Reflection
@using System.ComponentModel
@model GAMF_L.Models.Course

@{
    ViewData["Title"] = "Részletek";
    var course = typeof(Course).GetCustomAttribute<DisplayNameAttribute>()?.DisplayName;
}

<h1>Részletek</h1>

<div>
    <h4>@Html.DisplayName(course)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId">Szerkesztés</a> |
    <a asp-action="Index">Vissza a listához</a>
</div>
